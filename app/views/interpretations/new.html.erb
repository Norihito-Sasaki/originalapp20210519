<div class = 'row'>
  <div>
    
    <%= form_with(model: [@article,@interpretation], local:true) do |f| %>
    
      <% if @interpretation.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @interpretation.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= f.label :content, '回答'%>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      
      <%= f.submit '回答する', class: 'btn btn-primary btn-block' %>
    <%end%>
    <%= link_to "キャンセル", root_path, class: 'btn btn-secondary btn-block'%>
  </div>
</div>
