<div class="card" >
  <div class="card-body">
    <h5 class="card-title"><%= @article.title%></h5>
    <p class="card-text"><%=@article.theme%></p>
  </div>
</div>
<div>
  <%= render 'interpretations/interpretations', interpretations: @article.interpretations.page(params[:page]).per(3) %>
</div>

<div>
  <%= link_to "新規回答の作成", new_article_interpretation_path(@article)%>
  <% if current_user == @article.user %>
    <%= link_to "記事を削除",@article, method: :delete, data: { confirm: "削除しますか？"} %>
  <% end %>
</div>