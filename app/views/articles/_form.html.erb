<div class = 'row'>
  <div>
    
    <%= form_with(model: article, local:true) do |f| %>
    
      <div class="form-group">
        <%= f.label :title, "タイトル"%>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :theme, 'テーマ'%>
        <%= f.text_area :theme, class: 'form-control' %>
      </div>
      
      <%= f.submit comment, class: 'btn btn-primary btn-block' %>
    <%end%>
    <%= link_to "キャンセル", root_path, class: 'btn btn-secondary btn-block'%>
  </div>
</div>